{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "noEmit": false,
    "removeComments": true,
    "declaration": true,
    "inlineSourceMap": true,
    "outDir": "./src"
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules",
    "./app"
  ],
  "tsc-alias": {
    "verbose": true
  }
}