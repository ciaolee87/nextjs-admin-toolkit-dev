{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-jsx",
    "noEmit": false,
    "removeComments": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": [
    "./comp/**/*.ts",
    "./comp/**/*.tsx",
    "./index.ts"
  ],
  "exclude": [
    "node_modules",
    "./src"
  ]
}